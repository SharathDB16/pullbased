{
    "url" : "http://pullbased/api/v1.0/config_template/",
    "scenarios" : [
        {
            "method" : "post",
            "name" : "create first template",
            "request_params" : {
                "json":{
                    "name": "create_test1",
                    "description": "This is the first created config template",
                    "owner": "new-noc",
                    "group": "new-root",
                    "permission": "644",
                    "path": "/etc/memcache/memcache-2.ini"
                }
            },
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/create1.json"
        },
        {
            "method" : "get",
            "name" : "get first template",
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/retrieve1.json"
        },
        {
            "method" : "post",
            "name" : "create second template",
            "request_params" : {
                "json":{
                    "name": "create_test2",
                    "description": "This is the 2nd created config template",
                    "owner": "new-noc",
                    "group": "new-root",
                    "permission": "644",
                    "path": "/etc/memcache/memcache-3.ini"
                }
            },
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/create2.json"
        },
        {
            "method" : "get",
            "name" : "get two templates",
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/retrieve2.json"
        }
    ]
}
