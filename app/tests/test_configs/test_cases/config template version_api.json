{
    "url" : "http://pullbased/api/v1.0/config_template/version/{template_id}/",
    "dbfile" : "tests/db_files/config_template_version_api.sql",
    "scenarios" : [
        {
            "method" : "post",
            "name" : "create first template first version",
            "url_params" :{
                "template_id" :"1"
            },
            "request_params" : {
                "data":{
                    "comment": "First version for template id 1"
                },
                "files":{
                    "template_file": "tests/test_configs/template_store/config_template/upload1.txt"
                }
            },
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/version_upload_success.json"
        },
        {
            "method" : "post",
            "name" : "create second template first version",
            "url_params" :{
                "template_id" :"2"
            },
            "request_params" : {
                "data":{
                    "comment": "First version for template id 2"
                },
                "files":{
                    "template_file": "tests/test_configs/template_store/config_template/upload1.txt"
                }
            },
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/version_upload_success.json"
        },
        {
            "method" : "post",
            "name" : "create first template second version",
            "url_params" :{
                "template_id" :"1"
            },
            "request_params" : {
                "data":{
                    "comment": "Second version for template id 1"
                },
                "files":{
                    "template_file": "tests/test_configs/template_store/config_template/upload2.txt"
                }
            },
            "response_code": 200,
            "expected_content" : "tests/expected_reponses/template_store/config_template/version_upload_success.json"
        },
        {
            "method" : "post",
            "name" : "Error case, create version of unknown template",
            "url_params" :{
                "template_id" :"4"
            },
            "request_params" : {
                "data":{
                    "comment": "First version for template id 1"
                },
                "files":{
                    "template_file": "tests/test_configs/template_store/config_template/upload1.txt"
                }
            },
            "response_code": 400,
            "expected_content" : "tests/expected_reponses/template_store/config_template/version_upload_failure.json"
        }
    ]
}
