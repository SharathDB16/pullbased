{
    "url" : "http://pullbased/api/v1.0/config_template/download/{template_id}/",
    "dbfile" : "tests/db_files/config_template_download_api.sql",
    "scenarios" :[
        {
            "name" : "download first template",
            "url_params" :{
                "template_id" :"1"
            },
            "response_code": 200,
            "expected_content" : "tests/test_configs/template_store/config_template/upload2.txt"
        },
        {
            "name" : "download second template",
            "url_params" :{
                "template_id" :"2"
            },
            "response_code": 200,
            "expected_content" : "tests/test_configs/template_store/config_template/upload1.txt"
        },
        {
            "name" : "Error case, unknown template",
            "url_params" :{
                "template_id" :"4"
            },
            "response_code": 404,
            "expected_content" : "tests/expected_reponses/template_store/config_template/template_file_not_found.json"
        }
    ]
}