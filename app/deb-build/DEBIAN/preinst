#!/bin/bash

if [ "$1" == "upgrade" ]
then
    /bin/echo "...........###########################################............."
    /bin/echo "..................Upgrading Pullbased agent........................."
    /bin/echo "...........###########################################............."
    /bin/touch /tmp/itsanupgrade
else
    /bin/echo "...........###########################################............."
    /bin/echo "..................Installing Pullbased agent........................"
    /bin/echo "...........###########################################............."
fi
